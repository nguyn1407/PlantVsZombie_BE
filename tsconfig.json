{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/*.json",
    "**/*.json",
    ".env"
  ],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}